    {
      "name": "List Sessions",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/sessions",
          "host": ["{{base_url}}"],
          "path": ["sessions"]
        }
      }
    },
    {
      "name": "Get Session",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/sessions/{{conversation_id}}",
          "host": ["{{base_url}}"],
          "path": ["sessions", "{{conversation_id}}"]
        }
      }
    },
    {
      "name": "Get Conversation History",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/sessions/{{conversation_id}}/history?include_metadata=true",
          "host": ["{{base_url}}"],
          "path": ["sessions", "{{conversation_id}}", "history"],
          "query": [{"key": "include_metadata", "value": "true"}]
        }
      }
    },
    {
      "name": "Delete Session",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{base_url}}/sessions/{{conversation_id}}",
          "host": ["{{base_url}}"],
          "path": ["sessions", "{{conversation_id}}"]
        }
      }
    }
